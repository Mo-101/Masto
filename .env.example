# MNTRK Sovereign Observatory - Environment Configuration
# Copy this file to .env and configure with your actual values

# ============================================================================
# CORE SYSTEM CONFIGURATION
# ============================================================================

# Flask Application Settings
FLASK_ENV=production
FLASK_DEBUG=false
PORT=8080
SECRET_KEY=your-super-secret-key-change-this

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Neon PostgreSQL Database
DATABASE_URL=postgresql://username:password@host:5432/sovereign_mntrk

# Local PostgreSQL (for development)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sovereign_mntrk

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================

# Path to Firebase service account credentials JSON file
FIREBASE_CREDENTIALS=/absolute/path/to/firebase-credentials.json

# Alternative: Firebase credentials as JSON string (for containerized deployments)
# FIREBASE_CREDENTIALS={"type":"service_account","project_id":"your-project",...}

# ============================================================================
# AI SERVICES CONFIGURATION
# ============================================================================

# DeepSeek AI API Configuration
DEEPSEEK_API_KEY=your-deepseek-api-key
DEFAULT_DEEPSEEK_MODEL=deepseek-r1-distill-qwen-7b

# MostlyAI Synthetic Data Configuration
MOSTLYAI_API_KEY=your-mostlyai-api-key
MOSTLYAI_API_URL=https://app.mostly.ai
MOSTLYAI_DATASET_ID=your-dataset-id

# Google Vision AI (optional)
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# ============================================================================
# EDGE DEVICE CONFIGURATION
# ============================================================================

# Edge Device Settings
EDGE_DEVICE_ID=edge_device_001
SYNC_INTERVAL=300
CENTRAL_API_URL=http://localhost:8080

# ============================================================================
# GEOSPATIAL SERVICES
# ============================================================================

# Cesium Ion Access Token (for 3D mapping)
CESIUM_ACCESS_TOKEN=your-cesium-access-token

# ============================================================================
# CACHING AND PERFORMANCE
# ============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379

# ============================================================================
# MONITORING AND LOGGING
# ============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/sovereign.log

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# API Security
API_RATE_LIMIT=1000
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Docker Configuration
POSTGRES_PASSWORD=sovereign_password

# Production URLs
API_BASE_URL=http://localhost:8080
EDGE_API_URL=http://localhost:8081
OBSERVATORY_URL=http://localhost:3000

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development flags
ENABLE_DEBUG_ROUTES=false
MOCK_AI_RESPONSES=false
SKIP_AUTH=false
