rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Public read access for system status
    match /system_status/{document} {
      allow read: if true;
    }
    
    // Detection patterns - authenticated users can read/write
    match /detection_patterns/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Outbreak alerts - public read, authenticated write
    match /outbreak_alerts/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
